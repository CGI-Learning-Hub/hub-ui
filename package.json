{
  "name": "@cgi-learning-hub/monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter cgi-learning-hub-local-ui dev",
    "build": "pnpm --filter '@cgi-learning-hub/*' build",
    "build:icons": "pnpm --filter @cgi-learning-hub/icons build",
    "build:theme": "pnpm --filter @cgi-learning-hub/theme build",
    "build:ui": "pnpm --filter @cgi-learning-hub/ui build",
    "watch:icons": "pnpm --filter @cgi-learning-hub/icons build:watch",
    "watch:theme": "pnpm --filter @cgi-learning-hub/theme build:watch",
    "watch:ui": "pnpm --filter @cgi-learning-hub/ui build:watch",
    "preview": "pnpm --filter cgi-learning-hub-local preview",
    "clean": "rm -rf */**/node_modules && rm -rf node_modules pnpm-lock.yaml && rm -rf */**/dist",
    "prettier": "npx prettier --write packages/**/src apps/local-ui/src",
    "publish": "pnpm publish -r --access public",
    "publish:dev": "pnpm publish -r --access public --tag develop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@fontsource/material-icons": "5.2.5",
    "@fontsource/roboto": "5.2.6",
    "@mui/material": "^7",
    "@storybook/addon-a11y": "9.0.10",
    "@storybook/addon-docs": "9.0.10",
    "@storybook/addon-links": "9.0.10",
    "@storybook/addon-themes": "9.0.10",
    "@storybook/react-vite": "9.0.10",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react-swc": "3.11.0",
    "glob": "11.0.3",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-toastify": "11.0.5",
    "storybook": "9.0.10",
    "typescript": "5.8.3",
    "vite": "7.0.6",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-lib-inject-css": "2.2.2",
    "vite-plugin-svgr": "4.3.0",
    "vite-tsconfig-paths": "5.1.4"
  }
}
