{
  "name": "@cgi-learning-hub/theme",
  "version": "1.3.4",
  "private": false,
  "author": "CGI Learning-hub Team",
  "description": "@cgi-learning-hub/theme is a theme compatible with tailwind and mui",
  "keywords": [
    "cgi-learning-hub",
    "tailwind",
    "tailwindcss",
    "hub",
    "hub-ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CGI-OPEN-ENT-NG/hub-ui.git",
    "directory": "packages/theme"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./config": {
      "import": "./dist/hub-tw-theme.es.js",
      "require": "./dist/hub-tw-theme.cjs.js"
    }
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch"
  },
  "dependencies": {
    "@mui/utils": "6.1.9",
    "@mui/x-date-pickers": "7.22.3"
  },
  "devDependencies": {
    "tailwindcss": "3.4.15"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@mui/material": "^6"
  }
}
