{
  "name": "@cgi-learning-hub/theme",
  "version": "1.11.0-dev",
  "description": "Multi-tenant theming system for Hub's design system, providing customizable themes for different client organizations.",
  "keywords": [
    "cgi-learning-hub",
    "react",
    "theme",
    "themes",
    "multitenancy"
  ],
  "author": "CGI Learning Hub Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CGI-Learning-Hub/hub-ui.git",
    "directory": "packages/theme"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./index.css": "./dist/theme.css"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.css",
    "!dist/**/*.map"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "@fontsource/arimo": "5.2.8",
    "@fontsource/roboto": "5.2.9",
    "@mui/utils": "7.3.5"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@mui/material": "^7",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "tailwindcss": "^4"
  }
}
